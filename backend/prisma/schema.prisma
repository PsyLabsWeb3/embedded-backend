generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wallet {
  id        Int      @id @default(autoincrement())
  address   String   @unique
  points    Int      @default(0)
  createdAt DateTime @default(now())

  matchesA      Match[]        @relation("WalletA")
  matchesB      Match[]        @relation("WalletB")
  matchesWinner Match[]        @relation("WinnerWallet")
  seasonResults SeasonResult[] @relation("SeasonWallet")
}

model Match {
  id           Int     @id @default(autoincrement())
  matchId      String  @unique
  walletA      Wallet  @relation("WalletA", fields: [walletAId], references: [id])
  walletAId    Int
  walletAJoined DateTime?
  walletB      Wallet? @relation("WalletB", fields: [walletBId], references: [id])
  walletBId    Int?
  walletBJoined DateTime?
  winnerWallet Wallet? @relation("WinnerWallet", fields: [winnerId], references: [id])
  winnerId     Int?

  game String
  mode MatchMode @default(CASUAL)
  betAmount Decimal @db.Decimal(10, 2) @default(0.50)
  matchFee Decimal @db.Decimal(10, 2) @default(0.10)

  txSigA String
  txSigB String?

  status    MatchStatus
  createdAt DateTime    @default(now())
  startedAt DateTime?
  endedAt   DateTime?

  @@index([status])
  @@index([status, startedAt])
}

enum MatchMode {
  CASUAL
  BETTING
}

enum MatchStatus {
  WAITING
  IN_PROGRESS
  FINISHED
}

model SeasonResult {
  id        Int      @id @default(autoincrement())
  season    Int
  wallet    Wallet   @relation("SeasonWallet", fields: [walletId], references: [id])
  walletId  Int
  points    Int
  timestamp DateTime @default(now())

  @@unique([season, walletId])
}
